function evenNumbersOnly(numbers)
{
    const evens = [];
    for(const number of numbers)
    {
        if(number % 2 === 0)
        {
            console.log(number);
            evens.push(number);
        }
    }
    return evens;
}

const num = [1,2,3,4,5,6,7];
const evens = evenNumbersOnly(num);
console.log('Even numbers are: ', evens);
